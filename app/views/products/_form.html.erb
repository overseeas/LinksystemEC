<%= form_with model: product do |form| %>
    <div>
        <%= form.label :code %><br/>
        <%= form.text_field :code%>
        <% product.errors.full_messages_for(:code).each do |message| %>
            <div>
                <%= message %>
            </div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>