<h1><%= @product.code %></h1>
<p>
    <%= @product.rakuten_code %>
</p>



<h2>Rakuten info</h2>
<table border="1", style="width:100%">
    <tr>
        <th style="width:40%">SKU管理番号</th>
        <th>販売価格</th>
        <th>表示価格</th>
        <th>Action</th>
    </tr>
    
    <%= render @product.rakuten_products %>
    
</table>
<%= render 'rakuten_products/form' %>


<ul>
    <li><%= link_to "Edit", edit_product_path(@product) %></li>
    <li>
        <%= link_to "Destroy", product_path(@product), data:{
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
        } %>
    </li>
</ul>

<%= link_to "To product list", products_path %>